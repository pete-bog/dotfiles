alias ga="git add"
alias gaa="git add -A && git status"
alias gac="git add -A && git status && git commit -m"
alias gco="git checkout"
alias gr="git reset"
alias gp="git push"
alias gl="git pull"
alias g="git"

alias grep="grep --color=auto"

alias docker="sudo docker"

